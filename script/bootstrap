#!/bin/bash

# Content Index Page - Bootstrap Script
# Sets up the development environment and checks Docker availability

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Content Index Page - Bootstrap Setup${NC}"
echo "======================================"
echo

# Check if Docker is installed
echo -e "${BLUE}Checking Docker installation...${NC}"
if ! command -v docker &> /dev/null; then
    echo -e "${RED}L Docker is not installed${NC}"
    echo "Please install Docker from: https://www.docker.com/get-started"
    exit 1
fi
echo -e "${GREEN} Docker is installed${NC}"

# Check if Docker daemon is running
echo -e "${BLUE}Checking Docker daemon status...${NC}"
if ! docker info &> /dev/null; then
    echo -e "${RED}L Docker daemon is not running${NC}"
    echo "Please start Docker daemon:"
    echo "  - On macOS: Open Docker Desktop"
    echo "  - On Linux: sudo systemctl start docker"
    echo "  - On Windows: Start Docker Desktop"
    exit 1
fi
echo -e "${GREEN} Docker daemon is running${NC}"

# Check if Docker Compose is available
echo -e "${BLUE}Checking Docker Compose availability...${NC}"
if docker compose version &> /dev/null; then
    echo -e "${GREEN} Docker Compose (plugin) is available${NC}"
    COMPOSE_CMD="docker compose"
elif command -v docker-compose &> /dev/null; then
    echo -e "${YELLOW}   Using legacy docker-compose command${NC}"
    COMPOSE_CMD="docker-compose"
else
    echo -e "${RED}L Docker Compose is not available${NC}"
    echo "Please install Docker Compose:"
    echo "  - Docker Desktop includes Docker Compose"
    echo "  - Or install docker-compose separately"
    exit 1
fi

# Test Docker Compose with project file
echo -e "${BLUE}Testing Docker Compose with project file...${NC}"
if ! $COMPOSE_CMD config &> /dev/null; then
    echo -e "${RED}L Docker Compose configuration error${NC}"
    echo "Please check docker-compose.yml file"
    exit 1
fi
echo -e "${GREEN} Docker Compose configuration is valid${NC}"

# Final summary
echo
echo -e "${GREEN}<‰ Bootstrap setup completed successfully!${NC}"
echo
